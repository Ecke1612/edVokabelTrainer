<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" prefHeight="300.0" prefWidth="600.0" style="-fx-background-color: rgb(86, 148, 77);" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edVokabelTrainer.gui.Controller">
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="info_label" textFill="WHITE" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label fx:id="label_vok" textFill="WHITE">
                     <font>
                        <Font size="24.0" />
                     </font></Label>
                  <HBox HBox.hgrow="ALWAYS" />
                  <TextField fx:id="textfield" stylesheets="@css/textfield.css">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></TextField>
               </children>
            </HBox>
            <Button fx:id="btn_ok" mnemonicParsing="false" onAction="#check_vok" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 5;" text="Prüfen" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
               <padding>
                  <Insets bottom="1.0" left="5.0" right="5.0" top="1.0" />
               </padding>
            </Button>
            <HBox spacing="10.0">
               <children>
                  <Label fx:id="label_out" textFill="WHITE">
                     <font>
                        <Font size="24.0" />
                     </font></Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar style="-fx-background-color: rgb(86, 148, 77);">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#importDic" text="Wörterbuch importieren" />
                        <MenuItem mnemonicParsing="false" onAction="#updateDictonary" text="Wörterbuch aktualisieren" />
                        <MenuItem mnemonicParsing="false" onAction="#startTraining" text="Übung starten" />
                        <MenuItem mnemonicParsing="false" onAction="#startRepetition" text="Wiederhohlung starten" />
                        <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox spacing="10.0">
               <children>
                  <Label text="ED Vokabel Trainer" textFill="WHITE">
                     <font>
                        <Font name="Corbel Bold" size="30.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <left>
      <VBox prefWidth="20.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <VBox prefWidth="20.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <VBox prefHeight="20.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
